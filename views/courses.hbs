<h1>Courses</h1>
{{#if courses}}
    {{#each courses}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-image">
                        <img src="{{img}}" alt="{{title}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action actions">
                        <a href="/courses/{{id}}">Go to course</a>
                        {{#if @root.isAuth}}

                            {{#ifeq userId._id userId}}
                                <a href="/courses/{{id}}/edit?allow=true">Edit course</a>
                            {{/ifeq}}

                            <form action="/cart/add" method="POST">
                                <input name="_csrf" type="hidden" value="{{@root.csrf}}">
                                <input type="hidden" name="id" value="{{id}}">
                                <button type="submit" class="btn btn-danger">Buy</button>
                            </form>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <h3>There are no available courses</h3>
{{/if}}
