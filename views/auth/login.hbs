<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">

            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}

            <h1>Login</h1>

            <div class="row">
                <form class="col s12" method="POST" action="/auth/login">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" name="email" type="email" class="validate" required>
                            <label for="email">Email</label>
                            <span class="helper-text" data-error="Type in email" ></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" name="password" type="password" class="validate" required>
                            <label for="password">Password</label>
                            <span class="helper-text" data-error="Type in password"></span>
                        </div>
                    </div>

                    <input name="_csrf" type="hidden" value="{{csrf}}">

                    <p><a href="/auth/reset">Forgot password?</a></p>

                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
        <div id="register" class="col s6 offset-s3">

            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}

            <h1>Create account</h1>

            <div class="row">
                <form class="col s12" method="POST" action="/auth/register">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="remail" name="email" type="email" class="validate" required>
                            <label for="remail">Email</label>
                            <span class="helper-text" data-error="Type in email" ></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="rpassword" name="password" type="password" class="validate" required>
                            <label for="rpassword">Password</label>
                            <span class="helper-text" data-error="Type in password"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="repeat" type="password" name="repeat" class="validate" required>
                            <label for="repeat">Repeat password</label>
                            <span class="helper-text" data-error="Type in password again"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="name" name="name" type="text" class="validate" required>
                            <label for="name">Your name</label>
                            <span class="helper-text" data-error="Type in your name"></span>
                        </div>
                    </div>

                    <input name="_csrf" type="hidden" value="{{csrf}}">

                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>