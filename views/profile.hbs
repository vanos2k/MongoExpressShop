<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
          <img class="avatar" src="{{user.avatarUrl}}" alt="user.name">
        {{else}}
          <p>No profile image</p>
        {{/if}}
    </div>

    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Your's email: <strong>{{user.email}}</strong></p>

            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                <label for="name">Your name</label>
                <span class="helper-text" data-error="Name can't be empty" ></span>
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Profile image</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <input name="_csrf" type="hidden" value="{{csrf}}">

            <button type="submit" class="btn">Change</button>
        </form>
    </div>
</div>